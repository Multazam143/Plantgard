<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/plantgardtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plantgard"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CardView Padi -->
    <androidx.cardview.widget.CardView
        android:id="@+id/padi"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/plantgardtext" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="50dp">


            <ImageView
                android:id="@+id/padiImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/padi" />

            <TextView
                android:id="@+id/padiText"
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:layout_marginTop="8dp"
                android:text="Diagnosa Penyakit Tanaman Padi"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- CardView jagung -->
    <androidx.cardview.widget.CardView
        android:id="@+id/jagung"
        android:backgroundTint="@color/yellow"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/padi" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="50dp">

            <ImageView
                android:id="@+id/jagungImage"
                android:layout_width="110dp"
                android:layout_height="101dp"
                android:scaleType="centerCrop"
                android:src="@drawable/jagung" />

            <TextView
                android:id="@+id/jagungText"
                android:layout_width="176dp"
                android:layout_height="83dp"
                android:layout_marginTop="8dp"
                android:text="Diagnosa Penyakit Tanaman Jagung dan dapatkan cara penanggulangannya"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- CardView cabe -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cabe"
        android:layout_width="match_parent"
        android:backgroundTint="@color/red"
        android:layout_height="190dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/jagung"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="50dp">

            <ImageView
                android:id="@+id/cabeImage"
                android:layout_width="80dp"
                android:layout_height="109dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cabe" />

            <TextView
                android:id="@+id/cabeText"
                android:layout_width="192dp"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:text="Diagnosa Penyakit tanaman cabe"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>